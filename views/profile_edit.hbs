<html>

<head>
    <title>Profile - Edit</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/profile_edit.css">
</head>

<body style="margin:0">

    {{> header}}

    <div id="head">
        <p id="header">EDIT PROFILE</p>
    </div>
    <div id="navigate">
        <button type="button" id="back" onclick="goBack()">ðŸ¡¨ Back</button>
    </div>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>

    <div id="middle">
        <form id="profile-edit-form" method="post" action="/submitProfileEdit">
            <div class="form-group">
                <label for="username" id="usernamelabel">Username</label>
                <input type="text" id="username" name="username" placeholder="Username" value="{{user.username}}"
                    required>
            </div>
            <input type="hidden" id="id" name="id" value="{{user._id}}">
            <input type="submit" id="profile_editconfirmbutton" value="Confirm">
        </form>

    </div>
    </div>
    {{> navbar}}
</body>

</html>