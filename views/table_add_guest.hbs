        <div id="content-container">
            <form method="post" action="/addGuestTableSubmit">
                <div class="form-group">
                    <label for="tablename" id="tablenamelabel">Add Guest:</label>
                    <select id="guestlistdropdown" name="guestlistdropdown">
                        {{#each guests}}
                        <option value="{{this._id}}">{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
                <input type="hidden" id="tableID" name="tableID" value="{{table._id}}">
                <input type="hidden" id="flag" name="flag" value="{{flag}}">
                <input type="hidden" id="event" name="event" value="{{event}}">
                <input type="submit" id="editTableconfirmbutton" value="Confirm">
            </form>
        </div>
    </div>
    <div id="footer">
        <a href="collaborators.html"><button type="button" class="footerbutton" id="collaborators">
