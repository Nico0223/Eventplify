<!DOCTYPE html>
<html>

<head>
    <title>Edit Table</title>
    <link rel="stylesheet" href="css/editTable.css">
</head>

<body style="margin:0">

    {{> header}}

    <div id="middle">
        <div id="head">
            <p id="header">EDIT TABLE</p>
        </div>
        <div id="navigate">
            <a href="/tables?event={{event}}"><button type="button" id="back">ðŸ¡¨ Tables</button></a>
        </div>
        <div id="content-container">
            <form method="post" action="/editTableSubmit">
                <div class="form-group">
                    <label for="tablename" id="tablenamelabel">Table Name:</label>
                    <input type="text" id="tablename" name="tablename" placeholder="Table Name" value="{{table.name}}"
                        required>
                </div>
                <label for="guests" id="guestslabel">Guests:</label>
                <div class="form-group">

                    <ul id="guestlist">
                        {{#each guests}}
                        <li>{{this.name}}<img src="css/trash_icon.png" class="guestdeleteicon" id="{{this._id}}"></li>
                        {{/each}}
                    </ul>
                </div>
                <input type="hidden" id="tableID" name="tableID" value="{{table._id}}">
                <input type="hidden" id="event" name="event" value="{{event}}">
                <a href="/addGuestTable?id={{table._id}}&flag=edit&event={{event}}"><button type="button"
                        id="addGuestbutton">Add
                        Guest</button></a>
                <input type="submit" id="editTableconfirmbutton" value="Confirm">

            </form>
        </div>
    </div>
    {{> navbar}}
</body>
<script src="table_script.js"></script>

</html>