<html>

<head>
    <title>Edit Item</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/budget_additem.css">
</head>

<body style="margin:0">

    {{> header}}

    <div id="head">
        <p id="header">SET BUDGET LIMIT</p>
    </div>
    <div id="navigate">
        <button type="button" id="back" onclick="goBack()">ðŸ¡¨ Back</button>
    </div>

    <script>
        function goBack() {
            window.history.back();
        }
    </script>

    <div id="middle">
        <form id="budget-edit-form" method="post" action="/submitBudgetLimit">
            <div class="form-group">
                <label for="itemamount" id="itemamountlabel">Amount:</label>
                <input type="number" id="itemamount" name="itemamount" placeholder="Amount" value="{{event.budget}}">
            </div>
            <input type="hidden" id="event" name="event" value="{{event._id}}">

            <input type="submit" id="confirmbutton" value="Confirm">
        </form>

    </div>
    </div>
    {{> navbar}}
</body>

</html>