<html>

<head>
    <title>Tables</title>
    <link rel="stylesheet" href="css/tables.css">
</head>

<body style="margin:0">

    {{> header}}

    <div id="middle">
        <div id="head">
            <p id="header">TABLES</p>
        </div>
        <div id="navigate">
            <input type="search" id="search" placeholder="Search...">
            <button type="button" id="sortbutton">Sort</button>
            <button type="button" id="filterbutton">Filter</button>
        </div>
        <div id="entries">
            {{#each tables}}
            <div id="entry">
                <button type="button" id="editbutton">
                    <a href="/editTable?id={{this._id}}&event={{this.event}}"> <img src="css/edit_icon.png"
                            id="editicon"></a>
                    <img src="css/trash_icon.png" class="trashicon" id="{{this._id}}">
                </button>
                <p id="name">{{this.name}}</p>
                {{#each this.guests}}
                <p id="guest">{{this.name}}</p>
                {{/each}}
            </div>
            {{/each}}
        </div>
    </div>
    <div id="fixed-buttons">
        <a href="/addTable?event={{eventID}}"><button type="button" id="addtablebutton">
                <img src="css/plus_icon.png" class="btnicon">
                <span class="btnlabel">Add Table</span>
            </button></a>
    </div>
    {{> navbar}}
</body>
<script src="table_script.js"></script>

</html>